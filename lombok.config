# ===================================================================
#                      어노테이션 사용 정책
# ===================================================================

# @Data 어노테이션 사용 시 에러가 발생합니다.
# (모든 필드를 포함하는 equals, hashCode, toString 등을 생성하여 의도치 않은 동작을 유발할 수 있음)
lombok.data.flagUsage = ERROR

# @ToString 사용 시 경고를 표시합니다.
# (민감 정보 노출 또는 순환 참조로 인한 StackOverflowError 발생 가능성)
lombok.toString.flagUsage = WARNING

# @Setter 사용 시 경고를 표시합니다.
# (객체의 불변성(immutability)을 해칠 수 있어 사용에 주의가 필요)
lombok.setter.flagUsage = WARNING

# @SneakyThrows 사용 시 경고를 표시합니다.
# (Checked Exception을 숨겨서 예외 처리 흐름을 파악하기 어렵게 만들 수 있음)
lombok.sneakythrows.flagUsage = WARNING







